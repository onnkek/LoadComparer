<Window x:Class="LoadComparer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoadComparer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="input1"  Content="Загрузить" HorizontalAlignment="Left" Margin="26,30,0,0" VerticalAlignment="Top" Height="32" Width="148" Click="input1_Click"/>
        <Button x:Name="input2"  Content="Загрузить" HorizontalAlignment="Left" Margin="26,74,0,0" VerticalAlignment="Top" Height="32" Width="148" Click="input2_Click"/>
        <TextBlock x:Name="textInput1" HorizontalAlignment="Left" Margin="188,38,0,0" TextWrapping="Wrap" Text="Файл не загружен" Foreground="Red" VerticalAlignment="Top"/>
        <TextBlock x:Name="textInput2" HorizontalAlignment="Left" Margin="188,82,0,0" TextWrapping="Wrap" Text="Файл не загружен" Foreground="Red" VerticalAlignment="Top"/>
        <Button x:Name="compare"  Content="Сравнить" HorizontalAlignment="Left" Margin="26,139,0,0" VerticalAlignment="Top" Height="32" Width="148" Click="compare_Click"/>
        <TextBlock x:Name="dev" HorizontalAlignment="Left" Margin="26,204,0,0" TextWrapping="Wrap" Text="Файл не загружен" Foreground="Black" VerticalAlignment="Top"/>
    </Grid>
</Window>